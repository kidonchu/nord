.header
	scale(height, 5)
	background $dark-purple
	border-bottom 3px solid orange

.logo
	font-size 1px
	scale('margin-top', 1)
	text-indent -9999px

.main-nav
	fontSize .95
	font-weight 600
	scale('height', 1)
	lineheight .95
	list-style none
	margin 0
	li
		background-color $pastel-purple
		border-right 1px solid $dark-purple
		border-left 1px solid #aaa
		text-align center
		float left
		width (100% / $main-nav-items)
		a
			color white
			display block
			padding 0 16px
			overflow hidden
			text-decoration none
			&:hover, &:active
				background-color $dark-purple

.navbar-toggle-wrapper
	display none

.navbar-collapse
	padding 0

unquote("@media screen and (max-width: " + $screen-xs-max + ") {")
.navbar-toggle-wrapper
	background-color $pastel-purple
	display block
	scale(height, 2)
.navbar-toggle-button, .navbar-toggle-button:hover
	background-color $pastel-yellow
	border-radius 4px
	box-shadow none
	position relative
	float right
	padding 9px 10px
	scale(height, 1.5)
	margin ($line-height-px/4) 10px
	border 1px solid $pastel-yellow
	.icon-bar
		background-color $dark-purple
		display block
		width 22px
		height 2px
		border-radius 1px
		& + .icon-bar
			margin-top 4px
.navbar-toggle-button:hover
	background-color $light-yellow
.main-nav
	li
		border none
		scale('height', 1)
		width 100%
unquote("}")


