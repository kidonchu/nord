	font-size 140%
	line-height 1.6
	margin-bottom 2em


.address-direction
	border-left 1px solid #ccc
	padding-left 30px


.text-small p
	font-size 90%

.breadcrumb
	background none
	font-size .8em
	padding 0 0 0 1.5em
	margin -1em 0 1em 0
	a
		color darkest-purple
	.active a
		color lightest-purple


