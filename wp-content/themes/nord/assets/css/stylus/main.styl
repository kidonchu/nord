.content-container
	background-color white
	body-shadow()
	padding 1em 0

.sub-content-container
	background-color: white
	body-shadow()
	padding-top: 1em
	section
		padding 0 2em
		&:first-child
			border-right 1px solid #e1e1e1
		&:last-child
			border-left 1px solid #e1e1e1
	// 	&:nth-child(2)
