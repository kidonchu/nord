html
	font-size $root-font-size

body
	background-color $bg-color
	color $font-color
	font-size $font-size-px
	font $body-font-weight $font-size-rem/$line-height-rem $font-family-opensans

body, input, button
	text-rendering optimizeLegibility
	webkit-font-smoothing antialiased

h1, h2, h3, h4, h5, h6
	font-family $font-family-bitter
	font-weight $heading-font-weight
	a:link, a:hover, a:visited, a:focus
		color $heading-color
		text-decoration none

h1, .alpha
	fs(2.25)
	lh(2.25)
h2, .beta
	fs(1.875)
	lh(1.875)
h3, .gamma
	fs(1.5)
	lh(1.5)
h4, .delta
	fs(1.25)
	lh(1.25)
h5, .epsilon
	fs(1)
	lh(1)
h6, .zeta
	fs(.875)
	lh(.875)

p
	word-break break-word

.indent p+p
	text-indent 1.5em
	scale margin-top -1

b, strong
	color #222
	font-weight 600
em
	font-style italic
mark
	background-color #ff8
code, pre
	background-color #eee
	font-family Inconsolata,Monaco,Consolas,"Andale Mono","Bitstream Vera Sans Mono","Courier New",Courier,monospace
	font-size 14.4px
	font-size 0.9rem
a
	&:link, &:visited
		color $link-color
		text-decoration none
	&:hover
		text-decoration underline
	&:focus
		outline thin dotted

blockquote
	scale padding .5 0
	p
		fs(1)
		lh(1)
	small
		color $grey
		fs(.8)
		lh(.8)

.entry
	ul
		relative top left 40px
		list-style-type disc
		ul
			list-style-type circle
			ul
				list-style-type square

.leading
	fs(1.1)
	line-height 28px
	line-height 2.8rem

@media print
	*
		background transparent !important
		color #000 !important /* Black prints faster h5bp.com/s */
		box-shadow none !important
		text-shadow none !important
	p, h2, h3
		orphans 3 /* http//css-tricks.com/almanac/properties/o/orphans/ */
		widows 3  /* http//css-tricks.com/almanac/properties/w/widows/ */
	h2, h3
		page-break-after avoid
