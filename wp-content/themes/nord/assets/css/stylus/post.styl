.breadcrumbs
	scale(padding-top, 1)

.paypal-form
	scale(height, 3)

.event-table
	border-top 3px solid #3F3F3F
	border-bottom 1px solid #3F3F3F
	th, td
		padding-top 5px
		padding-bottom 5px

.event-year td
	border-top 1px solid #3F3F3F
	border-bottom 1px dotted #CCC
.event
	border-bottom 1px dotted #CCC
.event-date
	padding-left 20px
	width 20%
.event-title
	width 50%
.event-city
	width 20%
.event-state
	width 10%

.summary-title
	scale margin-bottom .5
	a:link
		color $purple-light
	a:hover
		text-decoration underline
	a:visited, a:active
		color $purple

.summary-date
	fs(.8)
	lh(.8)

unquote("@media screen and (max-width: " + $screen-xs-max + ") {")
.breadcrumbs, .entry
	padding 0 20px
unquote("}")
