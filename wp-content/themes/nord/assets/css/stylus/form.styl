.search-form
	border-right 1px solid #ccc
	margin-right 10px
	relative: left top 5px
	.btn
		padding-bottom 5px

.form-subscribe
	scale padding 1 0
	scale margin-bottom 1
	.control-label
		lh(2)
		padding 0
	input, .btn-subscribe
		scale height 2

.btn-subscribe
	scale height 2

.btn
	fs(1)
	lh(1)
	font-weight 700
	padding 11px 12px

a.btn-success, a.btn-warning, a.btn-danger
	color white

.btn-primary
	border none
	color white
	background-color #883288
	background -webkit-gradient(linear,50% 0%,50% 100%,color-stop(0%,#883288),color-stop(100%,#5f235f))
	background -webkit-linear-gradient(top,#883288,#5f235f)
	background -moz-linear-gradient(top,#883288,#5f235f)
	background -o-linear-gradient(top,#883288,#5f235f)
	background linear-gradient(top,#883288,#5f235f)
	box-shadow none

.btn-primary:hover,
.btn-primary:focus,
.btn-primary:active
	background-color #5f235f
	background -webkit-gradient(linear,50% 0%,50% 100%,color-stop(0%,#5f235f),color-stop(100%,#361436))
	background -webkit-linear-gradient(top,#5f235f,#361436)
	background -moz-linear-gradient(top,#5f235f,#361436)
	background -o-linear-gradient(top,#5f235f,#361436)
	background linear-gradient(top,#5f235f,#361436)
	box-shadow none

a
	&.btn-primary
		border none
		color white
		background-color #883288
		background -webkit-gradient(linear,50% 0%,50% 100%,color-stop(0%,#883288),color-stop(100%,#5f235f))
		background -webkit-linear-gradient(top,#883288,#5f235f)
		background -moz-linear-gradient(top,#883288,#5f235f)
		background -o-linear-gradient(top,#883288,#5f235f)
		background linear-gradient(top,#883288,#5f235f)

	&.btn-primary:hover,
	&.btn-primary:focus,
	&.btn-primary:active
		background-color #5f235f
		background -webkit-gradient(linear,50% 0%,50% 100%,color-stop(0%,#5f235f),color-stop(100%,#361436))
		background -webkit-linear-gradient(top,#5f235f,#361436)
		background -moz-linear-gradient(top,#5f235f,#361436)
		background -o-linear-gradient(top,#5f235f,#361436)
		background linear-gradient(top,#5f235f,#361436)

.btn-donate
	width 100%

