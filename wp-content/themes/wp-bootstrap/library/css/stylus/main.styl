.joinus
	relative: right top 8px

.header-meta
	height 40px

.header-top
	background mid-purple
	border-bottom 3px solid orange
	padding 1em 0 0

#main-navbar
	border-top 3px solid mid-purple
	body-shadow()
	font-size .95em
	font-weight 600
	padding 0
	.navbar
		background-color mid-purple
		border none
		border-radius 0
		margin 0
		min-height 40px
	.navbar-collapse
		padding 0
	.navbar-nav > li > a
		padding 10px 0
	.navbar-nav
		width 100%
		li
			background-color lightest-purple
			border-right 1px solid mid-purple
			border-left 1px solid #aaa
			text-align center
			a
				color white
				&:hover, &:active
					background-color: mid-purple
			&.active
				border-left none
				relative top 3px left
				z-index 2
				a, a:hover, a:active
					background-color: mid-purple
		li:nth-child(1)
			border-left none
			width 15%
		li:nth-child(2)
			width 15%
		li:nth-child(3)
			width 20%
		li:nth-child(4)
			width 20%
		li:nth-child(5)
			width 15%
		li:nth-child(6)
			border-right none
			width 15%

.sub-nav
	background-color mid-purple
	color white
	height 200px
	width 100%
	z-index 1

.main-feature-container
	background lighter-purple
	margin 0

.content-container
	background-color white
	body-shadow()

.sub-content-container
	background-color: white
	body-shadow()
	padding-top: 1em
	section
		padding 0 2em
		&:first-child
			border-right 1px solid #e1e1e1
		&:last-child
			border-left 1px solid #e1e1e1
	// 	&:nth-child(2)
	// 		padding 0 .5em

.footer
	background darker-grey
	clear both
	color dark-grey
	font-family "Kreon", sans-serif
	ul
		list-style-type none
		li
			margin-bottom 5px
			&.title
				color light-grey
				margin-bottom 1em
	a
		color dark-grey
		&.text-emphasize
			color lighter-purple
		&:hover, &:active
			color light-grey
			text-decoration none

footer()
	margin 0 auto
	padding 2em 0
	width 90%

.footer-top
	border-bottom 1px solid #151515
	footer()

.footer-bottom
	border-top 1px solid #515151
	footer()

.social
	background-image url(../img/sprites-social.png)
	display inline-block
	float left
	min-height 34px
	min-width 34px
	text-indent -9999px

	&.social-facebook
		background-position -104px -10px

	&.social-twitter
		background-position -8px -136px

	&.social-linkedin
		background-position -331px -3px

	&.social-rss
		background-position -85px -41px


for i in 5 10 15 20 25 30 35 40 45 50 100 200
	.spacer{i}
		border 0
		display block
		font-size 0
		height i * 1px
		margin 0
		padding 0
		width 100%

