.sidebar
	font-size 0.9em
	.topic
		padding 0 0 .5em 0
		margin: 0 0 .5em 0
		.no-icon
			margin-left: .97em
		.link
			color mid-purple
			cursor pointer
			&:hover
				text-decoration: underline
		ul
			list-style-type none
			margin 0 0 0 1em
			a
				color color
		i.icon-caret-right
			padding-right .3em
		i.icon-caret-down
			padding-right .1em


.rss-box
	.rss-title
		display none
	.rss-items
		list-style-type none
		margin: 0
		li
			margin-bottom 2em
			line-height 1.5
		a
			display block
			font-size 1.5em
		span.rss-date
			display block
			font-size .8em
		br
			display none


