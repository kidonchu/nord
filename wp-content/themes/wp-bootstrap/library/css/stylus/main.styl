@import url("http://fonts.googleapis.com/css?family=Kreon:400,700")
@import url("http://fonts.googleapis.com/css?family=Montserrat:400,700")
@import url("http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,900,700,600")
@import "nib"
@import "variables.styl"
@import "mixins.styl"
@import "utilities.styl"

dark-purple   = #320961
pastel-purple = #7B54A8
violet        = #883288
light-yellow  = #EEBB4D
pastel-yellow = #FFDD92

html, body
	background bg-color
	height 100%
html, body
	font 100%/1.5em "Source Sans Pro", "Helvetica", "Arial", sans-serif

heading(weight)
	color dark-purple
	font-family "Source Sans Pro", "Helvetica", "Arial", sans-serif
	font-weight weight
	line-height 1.1em
	margin 1em 0

h1
	font-size 2.25em
	heading(900)
h2
	font-size 1.875em
	heading(700)
h3
	font-size 1.5em
	heading(700)
h4
	font-size 1.25em
	heading(700)
h5
	font-size 1em
	heading(700)
h6
	font-size 0.667em
	heading(700)
p
	color #444
	margin-bottom 1.5em

.leading
	font-size 1.2em
	line-height 1.4em


a, a:hover, a:active, a:visited
	text-decoration none
a
	color pastel-purple
	&:hover, &:active
		color light-yellow
	&:visited
		color dark-purple
		&:hover, &:active
			color light-yellow

img
	max-width 100%

.slogan
	padding 10px 30px 0 0

.logo
	padding-left 1em

.search-form
	border-right 1px solid #ccc
	margin-right 10px
	relative: left top 5px
	.btn
		padding-bottom 5px

.newsletter
	border-right 1px solid #ccc
	padding 0 0 0 5px
	relative: left top 5px

.social-icons
	padding-right: 5px
	relative: left top 5px


.subscription-form-container
	font-size .75em
	relative: left top 3px
	vertical-align middle
	form
		padding 0
		margin 0

.joinus
	relative: right top 8px

.header-meta
	height 40px

.header-top
	background mid-purple
	border-bottom 3px solid orange
	padding 1em 0

#main-navbar
	border-top 3px solid mid-purple
	body-shadow()
	font-size .95em
	font-weight 600
	padding 0
	.navbar
		background-color mid-purple
		border none
		border-radius 0
		margin 0
		min-height 40px
	.navbar-collapse
		padding 0
	.navbar-nav > li > a
		padding 10px 0
	.navbar-nav
		width 100%
		li
			background-color lightest-purple
			border-right 1px solid mid-purple
			border-left 1px solid #aaa
			text-align center
			a
				color white
				&:hover, &:active
					background-color: mid-purple
			&.active
				border-left none
				relative top 3px left
				z-index 2
				a, a:hover, a:active
					background-color: mid-purple
		li:nth-child(1)
			border-left none
			width 15%
		li:nth-child(2)
			width 15%
		li:nth-child(3)
			width 20%
		li:nth-child(4)
			width 20%
		li:nth-child(5)
			width 15%
		li:nth-child(6)
			border-right none
			width 15%

.sub-nav
	background-color mid-purple
	color white
	height 200px
	width 100%
	z-index 1

.main-feature-container
	background white
	body-shadow()
	margin 0
	& > .row > .col-md-8
		height 400px
	& > .row > .col-md-4
		height 400px
		p
			font-size 1.3em
			line-height 1.5em
			padding-right 2em
		a
			font-size 1.3em
			width 90%

.content-container
	background-color white
	body-shadow()

.sub-content-container
	background-color: white
	body-shadow()
	padding-top: 1em
	section
		padding 0 2em
		&:first-child
			border-right 1px solid #e1e1e1
		&:last-child
			border-left 1px solid #e1e1e1
	// 	&:nth-child(2)
	// 		padding 0 .5em

.footer
	background darker-grey
	clear both
	color dark-grey
	font-family "Kreon", sans-serif
	ul
		list-style-type none
		li
			margin-bottom 5px
			&.title
				color light-grey
				margin-bottom 1em
	a
		color dark-grey
		&.text-emphasize
			color lighter-purple
		&:hover, &:active
			color light-grey
			text-decoration none

.footer-top
	border-bottom 1px solid #151515
	margin 0 auto
	padding 2em 0
	width 90%

.footer-bottom
	border-top 1px solid #515151
	margin 0 auto
	padding 2em 0 1em
	text-align center
	width 90%
	a
		text-decoration underline
	p
		color #888

.social
	background-image url(../img/sprites-social.png)
	display inline-block
	float left
	min-height 34px
	min-width 34px
	text-indent -9999px

	&.social-facebook
		background-position -104px -10px

	&.social-twitter
		background-position -8px -136px

	&.social-linkedin
		background-position -331px -3px

	&.social-rss
		background-position -85px -41px


for i in 5 10 15 20 25 30 35 40 45 50 100 200
	.spacer{i}
		border 0
		display block
		font-size 0
		height i * 1px
		margin 0
		padding 0
		width 100%

.story p
	font-size 140%
	line-height 1.6
	margin-bottom 2em


.address-direction
	border-left 1px solid #ccc
	padding-left 30px


.text-small p
	font-size 90%

.breadcrumb
	background none
	font-size .8em
	padding 0 0 0 1.5em
	margin -1em 0 1em 0
	a
		color darkest-purple
	.active a
		color lightest-purple


