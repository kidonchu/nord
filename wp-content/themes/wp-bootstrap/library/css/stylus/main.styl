.accordion-inner
	border-top 1px solid #E5E5E5
	padding 9px 15px

.sidebar
	padding 0 10px 0 20px
	.post-link
		border-bottom 1px dotted #ccc
		color dark-purple
		display block
		padding 3px 10px
		&:nth-child(1)
			border-top 1px dotted #ccc
		&:visited
			color dark-purple
		&:hover, &:active
			color #333
			webkit-box-shadow 0 2px 5px 0px #858585
			  -moz-box-shadow 0 2px 5px 0px #858585
			       box-shadow 0 2px 5px 0px #858585
		&.active
			background #eee
			.glyphicon
				color pastel-purple
		.glyphicon
			color white

.sidebar-header
	color light-yellow - 10%
	padding-left 20px
	margin .25em 0

.rss-box
	.rss-title
		display none
	.rss-items
		list-style-type none
		margin: 0
		li
			margin-bottom 2em
			line-height 1.5
		a
			display block
			font-size 1.5em
		span.rss-date
			display block
			font-size .8em
		br
			display none


.affix
	top 30px

.no-list-style
	list-style-type none
	margin-left 0

.partners-list
	li
		height 4em
		img
			height auto
			vertical-align middle
			width 100%

.border-bottom
	border-bottom 1px solid mid-purple


.nav .divider-vertical
	border-left 1px solid lightest-purple
	border-right 1px solid lightest-purple

.carousel
	margin 	0
	.carousel-control
		top 50%
form
	margin 0

.breadcrumb
	margin 0
	padding 0

.pt2
	padding-top 2em;

.img-polaroid
	relative: left -5px top

.vertical-divider
	background-color #444
	float left
	min-height 200px
	width 2px

.text90
	font-size .9em

for pos in top bottom left right
	.border-{pos}
		border-{pos} 1px solid border-color
.border-all
	border 1px solid border-color

for pos in top bottom left right
	.with-padding-{pos}
		padding-{pos} 1em
.with-padding-all
	padding 1em

for pos in top bottom left right
	.no-padding-{pos}
		padding-{pos} 0

for height in (100..1000)
	if ((height % 100) == 0)
		.min-height-{height}
			min-height height * 1px

.orange
	color #BC8B46

.nav > li > a
	padding 5px 15px

.right-caret {
	border-bottom: 4px solid transparent;
	border-top: 4px solid transparent;
	border-left: 4px solid #000000;
	display: inline-block;
	height: 0;
	opacity: 0.3;
	vertical-align: top;
	width: 0;
}

.page-content
	padding 0 2em
	h2, h3, h4, h5, h6
		margin-bottom 0.25em

.post-content
	h2, h3, h4, h5, h6
		margin-bottom 0.25em
		&:nth-child(1)
			margin-top 0

.list-sitemap
	list-style-type none
	padding 0
	margin 0 0 2em 1em

.event
	border-top 3px dotted #aaa
	padding 1em 0
	margin-bottom 1em
.event-date
	margin-bottom 0
	font-style: italic
.event-header
	margin 0 0 .5em


