.social-icons
	padding-right: 10px
	relative: left top 5px

.subscription-form-container
	font-size .75em
	vertical-align middle
	p
		padding 7px 15px 0 0
		margin 0
	form
		padding 5px 0
		margin 0

.header-top
	background mid-purple
	body-shadow()
	border-bottom 3px solid orange
	padding 1em 0

#main-navbar
	background lightest-purple
	border-top 3px solid mid-purple
	body-shadow()
	font-size .95em
	font-weight 600
	padding 0

.main-feature-container
	background lighter-purple
	margin 0

.content-container
	background-color white
	body-shadow()

.sub-content-container
	background-color: white
	body-shadow()
	padding-top: 3em
	section
		padding 0 2em
		&:first-child
			border-right 1px solid #e1e1e1
		&:last-child
			border-left 1px solid #e1e1e1
		&:nth-child(2)
			padding 0 .5em

.footer-main
	background darker-grey
	clear both
	color dark-grey
	font-family "Kreon", sans-serif
	margin-top -(footer-height)
	min-height footer-height
	position relative

.footer-top
	border-bottom 1px solid #151515
	padding 3em 0 2.5em
	ul
		list-style-type none
		li
			margin-bottom 5px
			&.title
				color light-grey
				margin-bottom 1em
	a
		color dark-grey
		&.text-emphasize
			color lighter-purple
		&:hover,
		&:active
			color light-grey
			text-decoration none

.footer-bottom
	border-top 1px solid #515151
	padding 2.5em 0 0
	text-align center
	.divider
		display inline-block
		padding 0 5px
		&:before
			content "|"

.social
	background-image url(../../img/sprites-social.png)
	display inline-block
	float left
	min-height 34px
	min-width 34px
	text-indent -9999px

	&.social-facebook
		background-position -104px -10px

	&.social-twitter
		background-position -8px -136px

	&.social-linkedin
		background-position -331px -3px

	&.social-rss
		background-position -85px -41px


hr
	background url(../../img/logo-hr.png) no-repeat center center
	border none
	min-height 70px
	margin 0

for i in 5 10 15 20 25 30 35 40 45 50 100 200
	.spacer{i}
		border 0
		display block
		font-size 0
		height i * 1px
		margin 0
		padding 0
		width 100%

.story p
	font-size 140%
	line-height 1.6
	margin-bottom 2em


.address-direction
	border-left 1px solid #ccc
	padding-left 30px


.text-small p
	font-size 90%

.breadcrumb
	background #fafafa
	font-size .8em
	padding 0 0 0 1.5em
	margin -1em 0 1em 0
	a
		color darkest-purple
	.active a
		color lightest-purple


