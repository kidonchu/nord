for pos in top bottom left right
	.border-{pos}
		border-{pos} 1px solid border-color
.border-all
	border 1px solid border-color

for pos in top bottom left right
	.with-padding-{pos}
		padding-{pos} 1em
.with-padding-all
	padding 1em

for pos in top bottom left right
	.no-padding-{pos}
		padding-{pos} 0

for height in (100..1000)
	if ((height % 100) == 0)
		.min-height-{height}
			min-height height * 1px

