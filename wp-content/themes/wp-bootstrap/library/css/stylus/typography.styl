
html, body
	font 100%/1.5em "Source Sans Pro", "Helvetica", "Arial", sans-serif

heading(weight)
	color #222
	font-family "Source Sans Pro", "Helvetica", "Arial", sans-serif
	font-weight weight
	line-height 1.1em
	margin 1em 0

h1
	font-size 2.25em
	heading(900)
h2
	font-size 1.875em
	heading(700)
h3
	font-size 1.5em
	heading(700)
h4
	font-size 1.25em
	heading(700)
h5
	font-size 1em
	heading(700)
h6
	font-size 0.667em
	heading(700)
p
	color #444
	margin-bottom 1.5em

.leading
	font-size 1.2em
	line-height 1.4em

.text
	h2, h3, h4, h5, h6
		margin-bottom 0.25em